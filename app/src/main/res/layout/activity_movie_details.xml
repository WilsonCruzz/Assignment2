<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#283339"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MovieDetailsActivity">

    <ImageView
        android:id="@+id/moviePoster"
        android:layout_width="332dp"
        android:layout_height="306dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/movieType"
        android:layout_width="137dp"
        android:layout_height="58dp"
        android:layout_marginTop="56dp"
        android:text="movieType"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/movieDesc"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="@+id/movieDesc"
        app:layout_constraintTop_toBottomOf="@+id/movieDesc" />

    <Button
        android:id="@+id/goBackBtn"
        android:layout_width="285dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:text="Go Back"
        app:layout_constraintEnd_toEndOf="@+id/movieTitle"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="@+id/movieTitle"
        app:layout_constraintTop_toBottomOf="@+id/movieType" />

    <Button
        android:id="@+id/addFavBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Add Fav"
        app:layout_constraintBottom_toBottomOf="@+id/movieType"
        app:layout_constraintStart_toEndOf="@+id/movieType"
        app:layout_constraintTop_toTopOf="@+id/movieType"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/movieDesc"
        android:layout_width="344dp"
        android:layout_height="79dp"
        android:layout_marginTop="12dp"
        android:text="movieDesc"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/moviePoster"
        app:layout_constraintTop_toBottomOf="@+id/movieTitle" />

    <TextView
        android:id="@+id/movieYear"
        android:layout_width="89dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:text="movieYear"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/movieType"
        app:layout_constraintEnd_toStartOf="@+id/movieType"
        app:layout_constraintHorizontal_bias="0.156"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/movieType"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/movieTitle"
        android:layout_width="349dp"
        android:layout_height="59dp"
        android:layout_marginTop="12dp"
        android:text="movieTitle"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/moviePoster"
        app:layout_constraintTop_toBottomOf="@+id/moviePoster" />

</androidx.constraintlayout.widget.ConstraintLayout>