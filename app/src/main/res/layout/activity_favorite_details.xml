<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#283339"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.FavoriteDetails">

    <EditText
        android:id="@+id/favMovieType"
        android:layout_width="344dp"
        android:layout_height="79dp"
        android:layout_marginTop="12dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/moviePoster"
        app:layout_constraintTop_toBottomOf="@+id/movieTitle" />

    <ImageView
        android:id="@+id/moviePoster"
        android:layout_width="332dp"
        android:layout_height="306dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/movieTitle"
        android:layout_width="351dp"
        android:layout_height="72dp"
        android:layout_marginTop="8dp"
        android:text="movieTitle"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/moviePoster"
        app:layout_constraintTop_toBottomOf="@+id/moviePoster" />

    <Button
        android:id="@+id/goBackBtn"
        android:layout_width="285dp"
        android:layout_height="56dp"
        android:layout_marginTop="120dp"
        android:text="Go Back"
        app:layout_constraintEnd_toEndOf="@+id/movieTitle"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="@+id/movieTitle"
        app:layout_constraintTop_toBottomOf="@+id/favMovieType" />

    <Button
        android:id="@+id/delFavBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="@+id/updateTypeBtn"
        app:layout_constraintStart_toEndOf="@+id/updateTypeBtn"
        app:layout_constraintTop_toTopOf="@+id/updateTypeBtn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/updateTypeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Update"
        app:layout_constraintEnd_toEndOf="@+id/favMovieType"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintStart_toStartOf="@+id/favMovieType"
        app:layout_constraintTop_toBottomOf="@+id/favMovieType" />
</androidx.constraintlayout.widget.ConstraintLayout>